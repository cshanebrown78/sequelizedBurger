<div class="container">
    <div class="header">
            <h1 class="text-center"><span class="fa fa-users"></span> Time to EAT-DA-BURGER</h1>
            <img src="/assets/img/burger.jpg" width=150 alt="Burger">
            <hr>
    </div>        

<div class = container>
    <div class="row">
        <div class="col-lg-4">
            <h3>Burgers Devoured</h3>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    <li class="new-burgers">
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="btn btn-outline-dark btn-sm devourBurger" id="devourButton" data-id="{{this.id}}" data-beenDevoured={{devour}}><span>Devour It!</span></button>
                    </li>
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-lg-4">
            <h3>Enter a burger</h3>
            <form class="create-form">

                <div class="form-group">
                    <label for="newburger">Burger:</label>
                    <input type="text" id="newburger" name="burger">
                </div>


                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>

        </div>
        <div class="col-lg-4">
            <h3>Burgers Devoured</h3>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li class="new-burgers">
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    
                    </li>
                    {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>
      
      
</div>